{% extends "layout_base.njk" %}
{% block content %}
  <p style="margin-top:0;">Chào <b>{{ email.greeting_name or customer.full_name or "bạn" }}</b>,</p>
  <p>Chúng tôi đã nhận được đơn hàng của bạn.</p>

  <div style="margin:10px 0;padding:10px 12px;background:#fff7ed;border:1px solid #fed7aa;border-radius:12px;">
    <div style="font-size:13px;color:#9a3412;">Mã đơn</div>
    <div style="font-size:16px;font-weight:800;color:#9a3412;">{{ email.order_id or order.order_id or "" }}</div>
  </div>

  {% if email.cta_url %}
    <div style="text-align:center;margin:18px 0;">
      <a href="{{ email.cta_url }}"
         style="display:inline-block;padding:12px 20px;background:{{ theme.primary or "#f97316" }};color:#ffffff;text-decoration:none;border-radius:999px;font-weight:700;">
        {{ email.cta_text or "Thanh toán đơn hàng" }}
      </a>
    </div>
  {% endif %}

  {% if email.footer_note %}
    <p style="font-size:12px;color:#6b7280;margin-bottom:0;">{{ email.footer_note }}</p>
  {% endif %}
{% endblock %}
