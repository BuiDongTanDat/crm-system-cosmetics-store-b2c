{% extends "layout_base.njk" %}
{% block content %}
  <p style="margin-top:0;">Chào <b>{{ email.greeting_name or customer.full_name or "bạn" }}</b>,</p>
  <p>{{ email.body or "" }}</p>

  {% if email.cta_url %}
    <a href="{{ email.cta_url }}"
       style="display:inline-block;margin-top:10px;background:{{ theme.primary or "#111827" }};color:#fff;text-decoration:none;padding:10px 14px;border-radius:10px;font-weight:700;font-size:14px;">
      {{ email.cta_text or "Xem ưu đãi" }}
    </a>
  {% endif %}

  {% if email.footer_note %}
    <p style="margin-top:14px;font-size:12px;color:#6b7280;">{{ email.footer_note }}</p>
  {% endif %}
{% endblock %}
