{% extends "layout_base.njk" %}
{% block content %}
  <p style="margin-top:0;">Chào <b>{{ customer.full_name or email.greeting_name or "bạn" }}</b>,</p>
  <p>{{ email.body or "" }}</p>

  <div style="background:#f3f4f6;border-radius:12px;padding:12px 14px;margin:12px 0;">
    <div style="font-size:13px;color:#374151;">Mã ưu đãi:</div>
    <div style="font-size:18px;font-weight:800;color:#111827;letter-spacing:1px;">
      {{ email.coupon_code or "HBD-10" }}
    </div>
    <div style="font-size:12px;color:#6b7280;margin-top:6px;">
      HSD: {{ email.expire_text or "7 ngày kể từ hôm nay" }}
    </div>
  </div>

  {% if email.cta_url %}
    <a href="{{ email.cta_url }}"
       style="display:inline-block;background:{{ theme.primary or "#2563eb" }};color:#fff;text-decoration:none;padding:10px 14px;border-radius:10px;font-weight:700;font-size:14px;">
      {{ email.cta_text or "Xem ưu đãi" }}
    </a>
  {% endif %}

  {% if email.footer_note %}
    <p style="margin-top:14px;font-size:12px;color:#6b7280;">{{ email.footer_note }}</p>
  {% endif %}
{% endblock %}
