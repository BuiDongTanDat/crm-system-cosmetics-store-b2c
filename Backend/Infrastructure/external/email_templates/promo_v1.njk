{% extends "layout_base.njk" %}
{% block content %}
  <p style="margin-top:0;">Chào <b>{{ email.greeting_name or "bạn" }}</b>,</p>
  <p>{{ email.body or "" }}</p>

  {% if email.bullets and email.bullets.length %}
    <ul style="padding-left:18px;margin:12px 0;">
      {% for b in email.bullets %}
        <li>{{ b }}</li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if email.cta_url %}
    <div style="text-align:center;margin:18px 0;">
      <a href="{{ email.cta_url }}"
         style="display:inline-block;padding:12px 20px;background:{{ theme.primary or "#111827" }};color:#fff;text-decoration:none;border-radius:999px;font-weight:700;">
        {{ email.cta_text or "Xem ngay" }}
      </a>
    </div>
  {% endif %}

  {% if email.footer_note %}
    <div style="font-size:12px;color:#6b7280;">{{ email.footer_note }}</div>
  {% endif %}
{% endblock %}
